<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_layout2"
    android:layout_alignParentStart="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Train"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="@+id/textView5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Feed"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="What do you want to do?"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnFeed"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/feed"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        app:layout_constraintRight_toRightOf="@+id/textView4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_width="100dp" />

    <ImageButton
        android:id="@+id/btnTrain"
        android:layout_alignTop="@+id/btnFeed"
        android:layout_toStartOf="@+id/btnFeed"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/train"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Unlock Talent"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/btnFeed"
        app:layout_constraintRight_toRightOf="@+id/btnTrain"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnTrain" />

    <ImageButton
        android:id="@+id/btnUnlock"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5"
        android:layout_width="100dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/unlock"
        app:layout_constraintRight_toRightOf="@+id/textView6"
        app:layout_constraintLeft_toLeftOf="@+id/textView6"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_height="100dp" />

</android.support.constraint.ConstraintLayout>