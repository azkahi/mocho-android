<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_layout2"
    android:layout_alignParentStart="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Train"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginEnd="96dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Feed"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView3"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.41" />

    <TextView
        android:id="@+id/textView5"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="What do you want to do?"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="424dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnFeed"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5"
        android:layout_height="125dp"
        android:layout_width="125dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/feed"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/btnTrain"
        android:layout_alignTop="@+id/btnFeed"
        android:layout_height="125dp"
        android:layout_toStartOf="@+id/btnFeed"
        android:layout_width="125dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/train"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnFeed" />

    <TextView
        android:id="@+id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Unlock Talent"
        android:textSize="20sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="168dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintBottom_toTopOf="@+id/btnUnlock"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.75" />

    <ImageButton
        android:id="@+id/btnUnlock"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5"
        android:layout_height="125dp"
        android:layout_width="125dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/unlock"
        android:layout_marginStart="128dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>